<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DonSang.Views.CreateAccountPage"
             Title="Créer un compte"
             BackgroundColor="#FFFFFF">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">

            <Label Text="Créer un compte"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#D32F2F" />

            <!-- Champ Nom -->
            <Entry Placeholder="Nom"
                   Text="{Binding Nom}"
                   PlaceholderColor="#BDBDBD"
                   TextColor="Black" />

            <!-- Champ Prénom -->
            <Entry Placeholder="Prénom"
                   Text="{Binding Prenom}"
                   PlaceholderColor="#BDBDBD"
                   TextColor="Black" />

            <!-- Champ Date de Naissance -->
            <DatePicker Date="{Binding DateNaissance}"
                        Format="D"
                        TextColor="Black" />

            <!-- Champ Email -->
            <Entry Placeholder="Email"
                   Keyboard="Email"
                   Text="{Binding Email}"
                   PlaceholderColor="#BDBDBD"
                   TextColor="Black" />

            <!-- Champ Mot de Passe -->
            <Entry Placeholder="Mot de passe"
                   IsPassword="True"
                   Text="{Binding Password}"
                   PlaceholderColor="#BDBDBD"
                   TextColor="Black" />

            <!-- Champ Confirmation Mot de Passe -->
            <Entry Placeholder="Confirmer le mot de passe"
                   IsPassword="True"
                   Text="{Binding ConfirmPassword}"
                   PlaceholderColor="#BDBDBD"
                   TextColor="Black" />

            <!-- Bouton Créer un compte -->
            <Button Text="Créer un compte"
                    FontSize="18"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    Command="{Binding CreateAccountCommand}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
